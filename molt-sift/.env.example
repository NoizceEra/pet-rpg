# Molt Sift Real API Integration - Environment Variables

# ============================================
# PayAClaw Configuration
# ============================================

# Your PayAClaw API key (get from https://payaclaw.ai/dashboard)
PAYACLAW_API_KEY=your_api_key_here

# PayAClaw API endpoint
PAYACLAW_API_URL=https://api.payaclaw.ai/v1

# ============================================
# Solana Configuration
# ============================================

# Solana network: mainnet-beta, testnet, devnet, localhost
SOLANA_NETWORK=devnet

# Path to your Solana keypair file (JSON format)
# Generated with: solana-keygen new --outfile ~/.solana/molt-sift-keypair.json
SOLANA_KEYPAIR_PATH=/path/to/keypair.json

# Solana RPC endpoint (optional, defaults to network default)
SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com

# ============================================
# Flask API Configuration
# ============================================

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Enable debug mode (set to false in production)
FLASK_DEBUG=true

# Environment: development, production
FLASK_ENV=development

# ============================================
# Molt Sift Configuration
# ============================================

# Default validation rules: crypto, trading, sentiment, json-strict
DEFAULT_VALIDATION_RULES=json-strict

# Polling interval for new bounties (seconds)
BOUNTY_POLL_INTERVAL=30

# Payment confirmation timeout (seconds)
PAYMENT_TIMEOUT=60

# ============================================
# Logging Configuration
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=./molt-sift.log

# ============================================
# Optional: CORS Configuration
# ============================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# Optional: Database Configuration (if using DB persistence)
# ============================================

# Database connection string
# DATABASE_URL=postgresql://user:password@localhost/molt_sift

# ============================================
# Optional: Monitoring & Alerting
# ============================================

# SendGrid API key for email alerts
# SENDGRID_API_KEY=your_sendgrid_key

# Alert email address
# ALERT_EMAIL=your-email@example.com
